---
import { ShieldCheck } from 'lucide-react';
---

<footer class="border-t-[3px] border-slate-900 bg-white mt-24">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-indigo-500 rounded-lg border-2 border-slate-900 flex items-center justify-center">
          <span class="text-white font-black text-sm">P</span>
        </div>
        <span class="font-black text-lg text-slate-900">PrivaTools</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-slate-500 font-medium">
        <ShieldCheck size={16} className="text-emerald-500" />
        <span>Your files never leave your browser. Ever.</span>
      </div>
      <div class="flex items-center gap-6 text-sm font-bold text-slate-500">
        <a href="/compress-pdf" class="hover:text-indigo-600 transition-colors">PDF Tools</a>
        <a href="/compress-image" class="hover:text-indigo-600 transition-colors">Image Tools</a>
        <a href="/contact" class="hover:text-indigo-600 transition-colors">Contact</a>
      </div>
    </div>
  </div>
</footer>
