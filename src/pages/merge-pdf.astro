---
import ToolLayout from '../layouts/ToolLayout.astro';
import MergePdf from '../components/tools/MergePdf';

const faqItems = [
  { question: 'Can I merge PDFs without uploading them?', answer: 'Yes. PrivaTools processes everything in your browser. Your PDFs never leave your device.' },
  { question: 'Is there a limit on how many PDFs I can merge?', answer: 'No hard limit. You can merge as many files as your browser can handle. For very large batches, processing may take a few seconds.' },
  { question: 'Will the merged PDF keep bookmarks and links?', answer: 'The merged output preserves the page content from each source file. Internal bookmarks may not be carried over depending on the PDF structure.' },
];
---

<ToolLayout
  title="Merge PDF Online Free - Combine PDF Files | PrivaTools"
  heading="Merge PDF"
  description="Combine multiple PDF files into one document. Free, no upload, 100% browser-based merging."
  relatedSlugs={['compress-pdf', 'split-pdf', 'jpg-to-pdf']}
  faqItems={faqItems}
  toolSlug="merge-pdf"
>
  <MergePdf client:load />

  <section class="mt-16 space-y-12 text-left" slot="seo-content">
    <div>
      <h2 class="text-2xl font-black text-slate-900 mb-4">How to Merge PDFs</h2>
      <ol class="list-decimal list-inside space-y-2 text-slate-600 font-medium">
        <li>Drop multiple PDF files or click "Browse" to select them.</li>
        <li>Reorder files by dragging if needed.</li>
        <li>Click "Merge" and download the combined PDF.</li>
      </ol>
    </div>

    <div>
      <h2 class="text-2xl font-black text-slate-900 mb-4">Why Merge PDFs with PrivaTools?</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-bold text-slate-900 mb-1">Complete Privacy</h3>
          <p class="text-slate-600">Your documents are merged locally in your browser. No server ever sees your files. Perfect for confidential contracts, invoices, or personal documents.</p>
        </div>
        <div>
          <h3 class="font-bold text-slate-900 mb-1">No Limits</h3>
          <p class="text-slate-600">Merge as many PDFs as you want, with no page or file count restrictions. No premium plan, no watermarks.</p>
        </div>
      </div>
    </div>

    <div>
      <h2 class="text-2xl font-black text-slate-900 mb-4">Frequently Asked Questions</h2>
      <dl class="space-y-4">
        {faqItems.map(({ question, answer }) => (
          <div>
            <dt class="font-bold text-slate-900">{question}</dt>
            <dd class="text-slate-600 mt-1">{answer}</dd>
          </div>
        ))}
      </dl>
    </div>
  </section>
</ToolLayout>
